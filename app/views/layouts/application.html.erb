								<li><div class="menulink-bar-active hidden-xs">|</div></li>

								<li><a href="/contacts/1" class="menulink">Contact</a></li>

								<li><div class="menulink-bar-active hidden-xs">|</div></li>
							</ul>
						</div><!--/.nav-collapse -->
					</div>
				</div>
				<div class="container body-content">
					<%= yield %>


					

					<div class="navbar-header">
						<img src="/assets/Marco_Bottom.png" class="logo-bottom" id="logoBottom" alt="Maderna bottom logo." />
