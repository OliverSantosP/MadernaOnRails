
<div id="products-carousel" class="owl-carousel">
	<div>
		<img src="/assets/Pictures-1.jpg" alt="Product 1" />
	</div>
	<div>
		<img src="/assets/Pictures-2.jpg" alt="Product 2" />
	</div>
	<div>
		<img src="/assets/Pictures-3.jpg" alt="Product 3" />
	</div>
</div>
<%= javascript_include_tag "application", "data-turbolinks-track" => true %>
<script type="text/javascript">
$(document).ready(function () {
	var owl = $("#products-carousel");
	owl.owlCarousel({
		items: 3,
		center: true,
		autoplayTimeout: 1000,
		autoplayHoverPause: true,
		autoplay: true,
		autoplaySpeed: 4000,
		loop: true,
		mouseDrag: true,
		touchDrag: true,
		autoWidth: true,
		nav: true
	});
});
</script>