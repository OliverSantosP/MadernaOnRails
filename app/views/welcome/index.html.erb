<%= javascript_include_tag "application", "data-turbolinks-track" => true %>

<script type="text/javascript">
	$(document).ready(function () {

				var top = $("#curtainTop");
				var middle = $("#curtainMiddle");
				var bottom = $("#curtainBottom");

				var logoTop = $("#logoTop").position();
				//var logoBottom = $("#logoBottom").position();

				$("#container").animate({opacity: "0"},0);
				$("#container2").animate({opacity: "0"},0);
				$("#container3").animate({opacity: "0"},0);
				$("#content").animate({opacity: "0"},0);

				//Animating curtain
				bottom.delay(2000).animate({ top: "-167px"},2000 );
				top.delay(2000).animate({ top: "352px"},2000 );
				middle.delay(3000).animate({ opacity: "0"},2000, function()
					{
						$("#container").animate({opacity: "1"},0);
						$("#container2").animate({opacity: "1"},0);
						$("#container3").animate({opacity: "1"},0);
				        $("#content").animate({opacity: "1"},0);

						$("#container").fadeIn(2000);
						$("#content").fadeIn(2000);
						$("#container2").fadeIn(2000);
						$("#container3").fadeIn(2000);

						top.animate({opacity: "0"},0);
						bottom.animate({opacity: "0"},0);

						

					});

				
			});
</script>

